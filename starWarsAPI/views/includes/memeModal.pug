.modal.fade(id=('exampleModal'+index) tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
  .modal-dialog.modal-dialog-centered
    .modal-content
      .modal-header
        h5#exampleModalLabel.modal-title Meme Maker
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      .modal-body
        img.img-center.meme-maker-img(src=val[1] alt='Star Wars Characters')
        div.mb-3
          <label for="recipient-name" class="col-form-label">Top Text:</label>
          <input type="text" class="form-control" id="recipient-name">
        div.mb-3
          <label for="recipient-name" class="col-form-label">Bottom Text:</label>
          <input type="text" class="form-control" id="recipient-name">
      .modal-footer
        button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Close
        button.btn.btn-primary(type='button' data-bs-dismiss='modal') Create
